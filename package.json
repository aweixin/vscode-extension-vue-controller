{
      "name": "vue-controller",
      "displayName": "vue-controller",
      "description": "本插件是基于vsCode创建vue 项目的插件 ，模拟 `Laravel` 的 一键创建：控制器、模型、视图、路由、配置文件等操作",
      "version": "0.0.28",
      "icon": "assets/logo.jpeg",
      "publisher": "aweixin",
      "engines": {
            "vscode": "^1.88.0"
      },
      "categories": [
            "Other"
      ],
      "keywords": [
            "vue",
            "控制器",
            "模型",
            "视图",
            "路由",
            "配置文件"
      ],
      "author": {
            "email": "linuxzhixin@gmail.com",
            "name": "aweixin",
            "url": "https://github.com/aweixin"
      },
      "repository": {
            "type": "git",
            "url": "https://github.com/aweixin/vscode-extension-vue-controller"
      },
      "activationEvents": [],
      "main": "./out/extension.js",
      "contributes": {
            "menus": {
                  "explorer/context": [
                        {
                              "when": "explorerResourceIsFolder",
                              "command": "extension.createFolderAndFile",
                              "group": "navigation"
                        },
                        {
                              "when": "explorerResourceIsFolder",
                              "command": "extension.createRouters",
                              "group": "navigation"
                        }
                  ]
            },
            "commands": [
                  {
                        "command": "extension.createFolderAndFile",
                        "title": "❤️Create Vue Controllers"
                  },
                  {
                        "command": "extension.createRouters",
                        "title": "🌍Create Vue Router"
                  }
            ]
      },
      "scripts": {
            "vscode:prepublish": "npm run compile",
            "compile": "tsc -p ./",
            "watch": "tsc -watch -p ./",
            "pretest": "npm run compile && npm run lint",
            "lint": "eslint src --ext ts",
            "test": "vscode-test"
      },
      "devDependencies": {
            "@types/vscode": "^1.88.0",
            "@types/mocha": "^10.0.6",
            "@types/node": "18.x",
            "@typescript-eslint/eslint-plugin": "^7.4.0",
            "@typescript-eslint/parser": "^7.4.0",
            "eslint": "^8.57.0",
            "typescript": "^5.3.3",
            "@vscode/test-cli": "^0.0.8",
            "@vscode/test-electron": "^2.3.9"
      }
}
